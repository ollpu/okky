<header>
  <%= image_tag('front_banner.jpg', class: 'front-banner') %>
  <%# cache('nav') do %>
    <nav>
      <%= link_to 'home', root_path, class: "material-icons mobile-exclusive mobile-menu" %>
      <!-- <a class="material-icons mobile-exclusive mobile-menu">home</a> -->
      <span class="divider mobile-exclusive"></span>
      <h1>OKKY</h1><!-- Prevent whitespace
   --><div class="items">
        <%= link_to 'home', root_path, class: 'material-icons hide-on-mobile' %>
        <% Page.sorted.each do |page| %>
          <%= link_to page.title, navigate_path(text_id: page.text_id) %>
        <% end %>
      </div>
      <span class="divider"></span>
      <%= form_tag '', class: 'search' do %>
        <%= text_field_tag :q, nil, placeholder: 'Hae...' %>
        <%= submit_tag 'search', class: 'material-icons' %>
      <% end %>
      <a href="" id="open-mobile-menu"
         class="material-icons mobile-exclusive mobile-menu"
         >menu</a>
    </nav>
  <%# end %>
</header>
