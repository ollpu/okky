<!DOCTYPE html>
<html>
<head>
  <title>Okky</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <%= google_webfonts_init google: ['Signika Negative',
    'Montserrat', 'Lora', 'Material Icons'] %>
</head>
<body>

<header>
  <%= image_tag('front_banner.jpg', class: 'front-banner') %>
  <nav>
    <h1>OKKY</h1><!-- Prevent whitespace
 --><div class="items">
      <a>Koti</a>
      <a>Toinen sivu</a>
      <a>Kolmas sivu</a>
    </div>
    <span class="divider"></span>
    <%= form_tag '', class: 'search' do %>
      <%= text_field_tag :q, nil, placeholder: 'Hae jotakin...' %>
      <%= submit_tag 'search', class: 'material-icons' %>
    <% end %>
  </nav>
</header>
<% unless @custom_layout %>
  <div class="container">
    <h2>Tekstiä</h2>
    <%= yield %>
  </div>
  <div class="container">
    <h2>Tekstiä</h2>
    <%= yield %>
  </div>
  <div class="container">
    <h2>Tekstiä</h2>
    <%= yield %>
  </div>
<% else %>
  <%= yield %>
<% end %>

<footer>
  <span class="text">
    <%= link_to 'Lähteikäs koodi', 'https://github.com/ollpu/okky' %>
  </span>
</footer>

</body>
</html>
